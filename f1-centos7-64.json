{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "provisioners/install-virtualbox-guest-additions.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "provisioners/clean-empty-space.sh"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 10240,
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [
        "iso/CentOS-7.0-1406-x86_64-NetInstall.iso",
        "http://www.gtlib.gatech.edu/pub/centos/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso"
      ],
      "iso_checksum_type": "md5",
      "iso_checksum": "96de4f38a2f07da51831153549c8bd0c",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /usr/sbin/shutdown -P now",
      "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "f1-centos-7-x86_64",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    }
  ],
  "post-processors": [
    {
      "output": "builds/f1-centos7-64.box",
      "type": "vagrant"
    }
  ]
}
